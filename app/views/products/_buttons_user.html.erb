  <% if cart.products.include?(product) %>
    <%= button_to 'Remove', remove_product_path(product), method: :post, class:"px-2 py-1 font-semibold text-white transition duration-500 bg-red-600 rounded-lg shadow-md text-ms hover:shadow-lg transform-gpu hover:scale-110 " %>
  <% else %>
    <%= button_to 'Add to cart', add_product_path(product), method: :post, class:"px-2 py-1 font-semibold text-white transition duration-500 bg-green-400 rounded-lg shadow-md text-md hover:shadow-lg transform-gpu hover:scale-110 " %>
  <% end %>
