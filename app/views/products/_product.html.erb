<div id="<%= product.id %>" data-controller="hello" class="p-6 my-4 border-2 border-gray-200 rounded-md shadow-sm hover:shadow-lg">
  <p class="my-5">
    <strong class="block mb-1 font-medium text-blue-600">Title:</strong>
    <%= product.title %>
  </p>
  <p class="my-5 ">
    <strong class="block mb-1 text-blue-600">Description:</strong>
    <%== product.description %>
  </p>
  <p class="my-5">
    <strong class="block mb-1 font-medium text-blue-600">Price:</strong>
    <%= number_to_currency(product.price, unit: "UAH", delimiter: " ", format: "%n %u") %>
  </p>
  <p class="my-5">
    <strong class="block mb-1 font-medium text-blue-600">Category:</strong>
    <%= product.category.name if product.category %>
  </p>
  <% if current_user.nil? %>
    <%= render "buttons_session", product: product , cart: @cart %>
  <% else %>
    <%= render "buttons_user", product: product , cart: @cart %>
  <% end %>
</div>
