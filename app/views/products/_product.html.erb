<div class="flex items-center mx-6 my-3">
  <div class="container max-w-xs mx-auto overflow-hidden transition duration-300 bg-white shadow-xl p-9 rounded-2xl hover:shadow-2xl">
    <img class="rounded-xl" src="https://images.unsplash.com/photo-1547517023-7ca0c162f816" alt="" />
     <h1 class="mt-5 text-2xl font-semibold"><%= product.title %></h1>
    <p class="my-5">
          <strong class="block mb-1 font-medium text-blue-600">Description:</strong>
          <%== product.description %> </p>
    <div class="flex items-center justify-between">
      <div>
        <p class="my-5">
          <strong class="block mb-1 font-medium text-blue-600">Category:</strong>
          <%= product.category.name if product.category  %>
        </p>

        <p class="mt-2"><%= number_to_currency(product.price, unit: "UAH", delimiter: " ", format: "%n %u") %></p>
      </div>
      <div>
        <% if current_user %>
          <%= render 'buttons_user', cart: @cart , product: product%>
        <% else %>
          <%= render 'buttons_session', cart: @cart , product: product%>
        <% end %>
        <% if action_name != "show" %>
          <button class="px-2 py-1 mt-2 font-semibold text-white transition duration-500 bg-green-400 rounded-lg shadow-md text-md hover:shadow-lg transform-gpu hover:scale-110 "> <%= link_to "Show ", product %></button>
        <% end %>
      </div>
    </div>
  </div>
</div>
