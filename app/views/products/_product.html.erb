<div id="<%= product.id %>" data-controller="hello" class="p-6 my-4 border-2 border-gray-200 rounded-md shadow-sm hover:shadow-lg">
  <p class="my-5">
    <strong class="block mb-1 font-medium text-blue-600">Title:</strong>
    <%= product.title %>
  </p>

  <p class="my-5 ">
    <strong class="block mb-1 text-blue-600">Description:</strong>
    <%= product.description %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium text-blue-600">Price:</strong>
    <%= product.price %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium text-blue-600">Category:</strong>
    <%= product.category.name if product.category %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this product", product, class: "bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded" %>
    <%= link_to 'Edit this product', edit_product_path(product), class: "bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 mb-6 border border-blue-500 hover:border-transparent rounded" %>
  <% end %>
</div>
