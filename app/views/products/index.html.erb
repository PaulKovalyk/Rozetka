<div class="w-full">
  <% if notice.present? %>
    <p class="inline-block px-3 py-2 mb-5 font-medium text-green-500 rounded-lg bg-green-50" id="notice"><%= notice %></p>
  <% end %>
  <div class="flex items-center justify-between">
    <h1 class="text-4xl font-bold text-blue-600">Products</h1>
    <%= render 'cart' %>
    <%= link_to 'New product', new_product_path, class: "bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded mt-2" %>
  </div>
  <div id="products" class="min-w-full">
    <article>
      <%= render @products %>
    </article>
  </div>
</div>
