<details>
  <summary>Shopping Cart</summary>
  <% if @cart.empty? %>
    <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
      <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
        <tr>
          <tr>
            <th>
              No items in cart.
            </th>
          </tr>
        </thead>
      </table>
    <% else %>
      <div class="relative overflow-x-auto">
        <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
          <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
              <th scope="col" class="px-6 py-3">
                Product name
              </th>
              <th scope="col" class="px-6 py-3">
                Category
              </th>
              <th scope="col" class="px-6 py-3">
                Price
              </th>
            </tr>
          </thead>
          <% @cart.each do |product| %>
            <tbody>
              <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                  <%= product.title %>
                </th>
                <td class="px-6 py-4">
                  <%= product.category.name %>
                </td>
                <td class="px-6 py-4">
                  <%= number_to_currency(product.price, unit: "UAH", delimiter: " ", format: "%n %u") %>
                </td>
              </tr>
            </tbody>
          <% end %>
          <tbody>
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
              <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                Total
              </th>
              <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
              </th>
              <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                <% if current_user.nil? %>
                <%= number_to_currency(total_price_session, unit: "UAH", delimiter: " ", format: "%n %u") %>
                <% else %>
                <%= number_to_currency(total_price_current_user, unit: "UAH", delimiter: " ", format: "%n %u") %>
                <% end %>
              </th>
            </tr>
            <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
              <%= link_to 'To order', new_order_path, class: "bg-transparent hover:bg-blue-900 text-blue-700 font-semibold hover:text-white py-2 px-4  border border-blue-500 hover:border-transparent rounded"%>
            </th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
            <th>
            </th>
            <th>
              <% if current_user.nil? %>
                <%= link_to 'Empty cart', delete_session_cart_path, class: "bg-transparent hover:bg-red-900 text-blue-700 font-semibold hover:text-white py-2 px-4  border border-blue-500 hover:border-transparent rounded" %>
                <% else %>
                <%= link_to 'Empty cart', empty_cart_path, class: "bg-transparent hover:bg-red-900 text-blue-700 font-semibold hover:text-white py-2 px-4  border border-blue-500 hover:border-transparent rounded" %>
              <% end %>

            </th>
          </tbody>
        </table>
      </div>
    <% end %>
  </details>
  <div class="w-full">
    <% if notice.present? %>
      <p class="inline-block px-3 py-2 mb-5 font-medium text-green-500 rounded-lg bg-green-50" id="notice"><%= notice %></p>
    <% end %>
    <div class="flex items-center justify-between">
      <h1 class="text-4xl font-bold text-blue-600">Products</h1>
      <%= link_to 'New product', new_product_path, class: "bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded mt-2" %>
    </div>
    <div id="products" class="min-w-full">
      <article>
        <%= render @products %>
      </article>
    </div>
  </div>
