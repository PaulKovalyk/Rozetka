<div class="w-full mx-auto md:w-2/3">
  <h1 class="text-4xl font-bold">Confirm order</h1>
  <% if current_user.nil? %>
    <%= render "form_session", order: @order%>
  <% else %>
     <%= render "form_user", order: @order%>
  <% end %>
  <%= link_to 'Back to products', products_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
</div>
