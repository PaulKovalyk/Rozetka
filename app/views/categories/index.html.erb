<div class="w-full">
  <% if notice.present? %>
    <p class="inline-block px-3 py-2 mb-5 font-medium text-green-500 rounded-lg bg-green-50" id="notice"><%= notice %></p>
  <% end %>
  <div class="flex items-center justify-between">
    <h1 class="text-4xl font-bold text-blue-600">Products</h1>
    <%= link_to 'New category', new_category_path, class: "bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded mt-2" %>
  </div>
  <div id="products" class="min-w-full">
    <article>
      <% @categories.each do |category| %>
        <div class="p-6 my-4 border-2 border-gray-200 rounded-md shadow-sm hover:shadow-lg">
          <p class="my-5">
            <strong class="block mb-1 font-medium text-blue-600">Name:</strong>
            <%= category.name %>
          </p>
          <div class="flex items-center gap-2 p-2 my-2">
            <% if action_name != "show" %>
              <%= link_to 'Edit this category', edit_category_path(category), class: "bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4  border border-blue-500 hover:border-transparent rounded" %>
              <%= link_to 'Delete this category', category, data: { "turbo-method": :delete } , class: "bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4  border border-blue-500 hover:border-transparent rounded" %>
            <% end %>
          </div>
        </div>
      <% end %>
    </article>
  </div>
</div>
