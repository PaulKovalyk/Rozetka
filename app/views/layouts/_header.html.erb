<header>
  <nav class=" border-gray-200 px-4 lg:px-6 py-2.5 dark:bg-gray-800 bg-slate-400">
    <div class="flex flex-wrap items-center justify-between max-w-screen-xl mx-auto">
      <a href="http://127.0.0.1:3000" class="flex items-center">
        <img src="https://w7.pngwing.com/pngs/55/764/png-transparent-daggett-beaver-art-graphy-beaver-animals-photography-social-media.png" class="h-6 mr-3 sm:h-9" alt="Rozetka Logo" />
        <span class="self-center text-xl font-semibold whitespace-nowrap dark:text-white">Bober</span>
      </a>
      <div class="flex items-center lg:order-2">
        <% if current_user %>
          <div data-controller="dropdown" data-dropdown-open-value="false" data-dropdown-opened-class="bg-slate-300">
            <button  data-dropdown-target="activated" data-action="click->dropdown#toggleDropdown">
              <p class="mr-10">Settings</p>
            </button>
            <div data-dropdown-target="dropdownContent" class="fixed ">
              <div class="w-auto overflow-hidden bg-white border rounded-lg shadow">
                <%= link_to 'My orders', orders_path(current_user) , class: 'no-underline block py-3 px-3 text-center text-gray-900 bg-white hover:bg-gray-300 whitespace-nowrap' %>
                <%= link_to 'Logout', destroy_user_session_path, data: { "turbo-method": :delete } , class: 'no-underline block py-3 px-3 text-center  text-gray-900 bg-white hover:bg-gray-300 whitespace-nowrap'  %>
                <%= link_to 'Edit profile', edit_user_registration_path(current_user), class: 'no-underline block py-3 px-5 text-center text-gray-900 bg-white hover:bg-gray-300 whitespace-nowrap'  %>
              </div>
            </div>
          </div>
        <% else %>
          <%= link_to 'Log In', new_user_session_path, class:"text-gray-800 dark:text-white hover:bg-gray-50 focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-4 lg:px-5 py-2 lg:py-2.5 mr-2 dark:hover:bg-gray-700 focus:outline-none dark:focus:ring-gray-800" %>
          <%= link_to 'Sign Up', new_user_registration_path , class:"text-gray-800 dark:text-white hover:bg-gray-50 focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-4 lg:px-5 py-2 lg:py-2.5 mr-2 dark:hover:bg-gray-700 focus:outline-none dark:focus:ring-gray-800" %>
        <% end %>
      </div>
      <div class="items-center justify-between hidden w-full lg:flex lg:w-auto lg:order-1" id="mobile-menu-2">
        <ul class="flex flex-col mt-4 font-medium lg:flex-row lg:space-x-8 lg:mt-0">
          <li>
            <% if current_user %>
              <%= render 'products/cart_user_session' %>
            <% else %>
              <%= render 'products/cart_session' %>
            <% end %>
          </li>
          <li>
            <a href="#" class="block py-2 pl-3 pr-4 text-gray-700 border-b border-gray-100 hover:bg-gray-50 lg:hover:bg-transparent lg:border-0 lg:hover:text-primary-700 lg:p-0 dark:text-gray-400 lg:dark:hover:text-white dark:hover:bg-gray-700 dark:hover:text-white lg:dark:hover:bg-transparent dark:border-gray-700"><%= link_to 'Products', root_path %></a>
          </li>
          <li>
            <a href="#" class="block py-2 pl-3 pr-4 text-gray-700 border-b border-gray-100 hover:bg-gray-50 lg:hover:bg-transparent lg:border-0 lg:hover:text-primary-700 lg:p-0 dark:text-gray-400 lg:dark:hover:text-white dark:hover:bg-gray-700 dark:hover:text-white lg:dark:hover:bg-transparent dark:border-gray-700"><%= link_to 'Categories', categories_path %></a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>
